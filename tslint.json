{
	"extends": [
        "tslint:recommended"
	],
	"rules": {
        "no-console": false,
		"no-boolean-literal-compare": false,
		"strict-boolean-expressions": false,
        "indent": [true, "tab", 4],
        "variable-name": ["allow-pascal-case"],
        "interface-name" : [true, "never-prefix"]
	}
}
