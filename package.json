{
  "name": "portfolio-server-2019",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "test": "export NODE_ENV=test || set NODE_ENV=test && node_modules/mocha/bin/mocha \"src/**/*.spec.ts\" --recursive --require node_modules/ts-node/register.js --exit",
    "test:watch": "npm run test -- --watch-extensions ts,spec.ts --watch",
    "coverage": "node node_modules/nyc/bin/nyc.js --extension .ts --reporter lcov --reporter text npm run test",
    "start": "npm run build && node dist/",
    "start:watch": "node node_modules/npm-run-parallel build:watch _start:watch",
    "_start:watch": "nodemon node dist",
    "build": "npm run clean && node node_modules/typescript/bin/tsc --p tsconfig.json",
    "build:watch": "node_modules/typescript/bin/tsc --p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "docs": "node node_modules/typedoc/bin/typedoc --out docs/ src/ && echo '*\n!.gitignore' > docs/.gitignore",
    "lint": "node node_modules/tslint/bin/tslint -c tslint.json -e \"**/*.spec.ts\"  src/**/*.ts",
    "firebase:deploy": "npm run firebase:predeploy && firebase deploy",
    "firebase:predeploy": "npm run firebase:mkdir && npm run firebase:mkpkg && npm run firebase:build",
    "firebase:mkdir": "mkdir -p functions",
    "firebase:mkpkg": "cat package.json | grep \\\"name\\\": | sed \"s/,\\|://g\" | xargs printf \"{\\\"%s\\\": \\\"%s\\\"}\" > functions/package.json",
    "firebase:build": "npm install && npm run build && cp -rf package.json dist node_modules functions"
  },
  "repository": {
    "type": "git",
    "url": "git@github:johnfedoruk/portfolio-server-2019"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@yellow-snow/core": "0.0.3",
    "@yellow-snow/http": "0.0.3",
    "axios": "^0.18.0",
    "basic-auth": "^2.0.0",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "jwt-simple": "^0.5.1",
    "lru-cache": "^4.1.3",
    "multer": "^1.3.0",
    "nodemailer": "^4.6.8",
    "npm-api": "^0.4.12",
    "rxjs": "^5.4.3",
    "tsnode-di": "0.0.3"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.2",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.4",
    "@types/cheerio": "^0.22.9",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/jwt-simple": "^0.5.33",
    "@types/lru-cache": "^4.1.1",
    "@types/mocha": "^2.2.43",
    "@types/multer": "^1.3.6",
    "@types/node": "^8.0.34",
    "@types/nodemailer": "^4.6.2",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "npm-run-parallel": "^0.6.0",
    "nyc": "^11.2.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.7.2"
  }
}
